---
import Layout from '../layouts/Layout.astro';
import data from '../../public/data.json';
import '../../assets/scss/astro-ecommerce.scss';
import CardCategory from '../components/products/cardCategory';
import ProductFeature from '../components/products/productFeature';
import Navbar from '../components/navbar';
import Footer from '../components/footer';
import PromoSectionLarge from '../components/promo/promoSectionLarge';
---

<Layout title="landing">
	<main>
    <Navbar />
    <PromoSectionLarge
      title={"Pída ya su presupuesto online"}
      full_description={data.products[0].full_description}  
      pageHeaderBgImg={"../images/stockvault-tall-skyscrapers1375422.jpg"}
      pageHeaderMinVh="45vh"
      width="auto"
      height="auto"
    />
    <div id="services" class="container my-5" style="scroll-margin-top: 8em;">
      <div class="d-block text-center mb-5">
        <h3>Nuestras áreas de trabajo</h3>
      </div>
      <div class="row mb-5">
        {data.categories.slice(0, 6).map(category => 
          <div class="col-md-6 col-lg-4">
            <CardCategory
              thumb_src = {category.thumb_src}
              collection = {category.collection}
              title = {category.title}
            />
          </div>
        )}
      </div>
      <span id="whoweare" style="scroll-margin-top: 8em;"></span>
    <PromoSectionLarge 
      title="Quiénes somos"
      full_description={data.products[0].full_description_who_we_are} 
      pageHeaderBgImg={"../images/CIMG0171-800x450.jpg"} 
      pageHeaderMinVh="50vh"
      pageHeaderRadius="1rem"
    />
    <div class="my-5">
      <ProductFeature
        title="Siempre al servicio de nuestros clientes"
        images={data.products[2].images}
        full_description="En Imperial Bilbaina nos esforzamos por dar cada día un atención de mayor calidad"
        featuresDetails={data.products[0].featuresDetails}
      />
    </div>
    <!-- 
    <div class="mt-5 mb-10">
      <TestimonialsFade 
        pageHeaderBgImg={"https://images.unsplash.com/photo-1519642918688-7e43b19245d8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2676&q=80"} 
        pageHeaderMinVh="50vh"
      />
    </div>
    -->
    <Footer />

    </div>
  </main>

</Layout>